{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "types": [
      "lua-types/jit",
      "@opct/openos",
      "typescript-to-lua/language-extensions"
    ],
    "plugins": [{
      "name": "typescript-tstl-plugin"
    }]
  },
  "tstl": {
    "luaTarget": "JIT"
  }
}